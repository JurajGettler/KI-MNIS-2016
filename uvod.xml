<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Uvod"
    android:background="@drawable/uvod"
    >

    <TextView
        android:id="@+id/nazov"
        android:text="@string/nazov"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <Button
        android:id="@+id/trenuj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:text="@string/trenuj"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/tlacidlo"/>

    <Button
        android:id="@+id/historia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:text="@string/historia"
        android:onClick="historiaM"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/tlacidlo"/>

    <Button
        android:id="@+id/nastavenia"
        android:onClick="nastaveniaM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:text="Moje udaje"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/tlacidlo"/>

    <Button
        android:id="@+id/ukoncit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:text="@string/ukoncit"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/tlacidlo"/>

</LinearLayout>
