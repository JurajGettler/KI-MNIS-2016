<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000"
        android:layout_marginTop="10dp"></LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:weightSum="1"
    android:layout_marginTop="5dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="Cas_treningu"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="Vzdialenost"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="KCAL"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_marginBottom="10dp"
    android:background="#ffffff">


    <TextView
        android:id="@+id/potomok_text_cas"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="CAS_TRENINGU"
        android:textSize="13dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/potomok_text_vzdialenost"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="VZDIALENOST"
        android:textSize="15dp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/potomok_kcal"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="KCAL"
        android:textSize="13dp"
        android:gravity="center"/>





</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="1">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/podrobnosti"
            android:text="PODROBNOSTI"
            android:textSize="13dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:background="@drawable/tlacidlo"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/GPS"
            android:text="GPS"
            android:textSize="13dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:background="@drawable/tlacidlo"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/potomok_sport"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000"
        android:layout_marginTop="10dp"></LinearLayout>



</LinearLayout>